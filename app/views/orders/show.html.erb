<div class="row">
  <div class="col-md-12">
    <h2> 订单明细 </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
        </tr>
      </thead>
      <tbody>
        <% @book_lists.each do |book_list| %>
          <tr>
            <td><%= book_list.book_name %></td>
            <td><%= book_list.book_price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= @order.total %> CNY
      </span>
    </div>
     <hr>
     <h2> 寄送资讯 </h2>
     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>收货地址</td>
        </tr>
        <tr>
          <td><%= @order.address %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
