<div class="row">
  <div class="col-md-12">
  <%= link_to("清空漂流瓶", clean_baskets_path ,
              method: :delete , class: "pull-right",
              style: "text-decoration: underline;",
              data: { confirm: "你确定要清空整个漂流瓶吗？"} )%>

    <h2> 漂流瓶 </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">图书信息</th>
          <th>数量</th>
          <th>操作选项</th>
        </tr>
      </thead>
      <tbody>
        <% current_basket.basket_items.each do |basket_item| %>
          <tr>
            <td>
              <%= link_to book_path(basket_item.book) do %>
                <% if basket_item.book.image.present? %>
                  <%= image_tag(basket_item.book.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to(basket_item.book.name, book_path(basket_item.book)) %></td>
            <td><%= basket_item.quantity %></td>
            <td>
              <%= link_to basket_item_path(basket_item.id), method: :delete do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="total clearfix">
      <span class="pull-right">
         <span> 运费 10 RMB  </span><br />
         <span> 总计 10 RMB  </span>
      </span>
    </div>
    <hr>
    <div class="checkout clearfix">
      <%= link_to("确认结账", checkout_baskets_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>

