<div class="container">
    <div class="well well-sm">
        <strong>Book display</strong>
        <div class="btn-group">
            <a href="#" id="list" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th-list">
            </span>List</a> <a href="#" id="grid" class="btn btn-default btn-sm"><span
                class="glyphicon glyphicon-th"></span>Grid</a>
        </div>
    </div>
    <% if @books.count > 0 %>
      <div id="books" class="row list-group">
          <% @books.each do |book| %> 
          <div class="item  col-xs-4 col-lg-4">
              <div class="thumbnail">
                  <% if book.image.present? %>
                    <%= link_to image_tag(book.image_url, :alt => "book image", :class =>"group list-group-image img-responsive", :style => "height:400px; width:400px"), book_path(book) %>
                  <% else %>
                    <%= link_to image_tag("http://placehold.it/250x400", :alt => "book image", :class =>"group list-group-image img-responsive", :style => "height:400px; width:400px"), book_path(book) %>
                  <% end %>
                  <div class="caption">
                      <h4 class="group inner list-group-item-heading">
                          <%= book.name  %></h4>
                      <hr>
                      <p class="group inner list-group-item-text">
                       主人寄语: <%= book.description  %></p>
                      <hr>
                      <div class="row">
                          <div class="col-xs-12 col-md-6">
                              <p class="lead">
                              库存  <%= book.quantity  %></p>
                          </div>
                          <div class="col-xs-12 col-md-6">
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <% end %>
      </div>
    <% else %>
       <h3>还没有此类图书哦  </h3>
    <% end %>
</div>

<script>
$(document).ready(function() {
    $('#list').click(function(event){event.preventDefault();$('#books .item').addClass('list-group-item');});
    $('#grid').click(function(event){event.preventDefault();$('#books .item').removeClass('list-group-item');$('#books .item').addClass('grid-group-item');});
});
</script>

