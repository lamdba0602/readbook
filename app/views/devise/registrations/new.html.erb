<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panell panell-login">
					<div class="panell-heading">
						<div class="row">
							<div class="col-xs-12" style="text-align:center">
								<a href="#" class="active" id="register-form-link">Register</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panell-body">
						<div class="row">
							<div class="col-lg-12">
                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= f.error_notification %>
                  <div class="form-inputs">
                    <%= f.input :email, required: true, autofocus: true, type:"email", name:"email", id:"email", tabindex:"1",
                                class:"form-control", placeholder:"Email Address", value:"" %>
                    <%= f.input :password, required: true, placeholder:"Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                    <%= f.input :password_confirmation, required: true, placeholder:"Confirm Password" %>
                  </div>
								<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
                          <div class="form-actions">
                            <%= f.button :submit, "Register Now" , class:"form-control btn btn-register"%>
                          </div>
											</div>
										</div>
									</div>
                <% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
